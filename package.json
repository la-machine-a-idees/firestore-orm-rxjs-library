{
  "name": "@la.machine.a.idees/firestore-orm-rxjs",
  "description": "ORM library for Google Firestore for rxjs (Angular) users",
  "author": "La Machine à Idées <la-machine-a-idees@users.noreply.github.com> (https://github.com/la-machine-a-idees)",
  "keywords": [
    "orm",
    "firestore",
    "firebase",
    "rxjs"
  ],
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/la-machine-a-idees/firestore-orm-rxjs-library.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "vitest",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "prepare": "tsup",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "pretty": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint ."
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/firestore-orm-rxjs.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/firestore-orm-rxjs.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@size-limit/preset-small-lib": "^11.1.6",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "size-limit": "^11.1.6",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vitest": "^2.1.6"
  },
  "dependencies": {
    "firebase": "^11.0.2",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8"
  }
}
