{
  "name": "@la.machine.a.idees/firestore-orm-rxjs",
  "description": "ORM library for Google Firestore for rxjs (Angular) users",
  "author": "La Machine à Idées <la-machine-a-idees@users.noreply.github.com> (https://github.com/la-machine-a-idees)",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/la-machine-a-idees/firestore-orm-rxjs-library.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/firestore-orm-rxjs.esm.js",
  "size-limit": [
    {
      "path": "dist/firestore-orm-rxjs.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/firestore-orm-rxjs.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.6",
    "husky": "^9.1.7",
    "size-limit": "^11.1.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "firebase": "^11.0.2"
  }
}
